<div id="page"></div>
<div class='pg' current_page='<%= PageNo %>'  style="text-align:center;
margin:0 auto;">
    <ul class="pagination">
        <% var base_url = '/index/' %>
        <% if (PageNo == 1) { %>
        <li class='disabled'><a>«</a></li>
        <% } else { %>
        <li><a href="<%= base_url %>1">«</a></li>
        <% } %>

        <%
        var page_start = PageNo - 2 > 0 ? PageNo - 2 : 1;
        var page_end =pageNum
        %>

        <% if (page_start > 1) { %>
        <li><a>...</a></li>
        <% } %>

        <% for(var i = page_start; i <= page_end; i++) { %>
        <% if (i === PageNo) { %>
        <li class='disabled'><a><%= i %></a></li>
        <% } else { %>
        <li><a href='<%= base_url + i %>'><%= i %></a></li>
        <% } %>
        <% } %>

        <% if (page_end < pageNum ) { %>
        <li><a>...</a></li>
        <% } %>

        <% if (PageNo == pageNum) { %>
        <li class='disabled'><a>»</a></li>
        <% } else { %>
        <li><a href='<%= base_url + pageNum %>'>»</a></li>
        <% } %>
    </ul>
</div>
<script>
    $(document).ready(function () {
        var $nav = $('.pagination');
        var current_page = $nav.attr('current_page');
        if (current_page) {
            $nav.find('li').each(function () {
                var $li = $(this);
                var $a = $li.find('a');
                if ($a.html() == current_page) {
                    $li.addClass('active');
                    $a.removeAttr('href');
                }
            });
        }
    });
</script>